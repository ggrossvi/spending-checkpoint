{
  "manifest_version": 3,
  "name": "Spending Checkpoint",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html" ,
    "default_icon": {
      "16": "images/penny-logo-16.png",
      "32": "images/penny-logo-32.png",
      "48": "images/penny-logo-48.png",
      "128": "images/penny-logo-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
